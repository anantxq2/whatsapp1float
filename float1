<script>
// âœ… Names list
const amit66 = [
  "Neha Rani",
  "Swati Bhabhi",
  "Pooja ji",
  "Anjali",
  "Riya Patel",
  "Simran"
];

// âœ… Redirect URLs list
const vikas32 = [
  "https://a.com",
  "https://s.com",
  "https://d.com",
  "https://f.com",
  "https://g.com",
  "https://h.com"
];

const preeti55 = document.getElementById("sumit77");

// Function: change name randomly
function kavita21(){
  const randomName = amit66[Math.floor(Math.random() * amit66.length)];
  preeti55.textContent = "Call " + randomName;
}

// First call
kavita21();

// Every 10 sec change
setInterval(kavita21, 10000);

// Redirect on click
document.getElementById("gopal45").addEventListener("click", function(e){
  e.preventDefault();
  const randomLink = vikas32[Math.floor(Math.random() * vikas32.length)];
  window.location.href = randomLink;
});
</script>


